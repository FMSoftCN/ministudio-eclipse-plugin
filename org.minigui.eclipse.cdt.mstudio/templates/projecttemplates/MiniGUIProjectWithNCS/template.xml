<?xml version="1.0" encoding="UTF-8"?>

<template type="ProjTempl" version="1.0" supplier="minigui.org" revision="1.0" author="sylvia" 
copyright="Copyright (c) 2008 Feynman Software. All rights reserved."
id="MGProjectWithNCS" label="%MiniGUINcsProject.template.label" 
description="%MiniGUINcsProject.template.description" help="help.html">

	<property-group id="basics" label="%Ncs.basics.label" description="%Ncs.basics.description" type="PAGES-ONLY" help="help.html">
		<property id="author"
			label="%Ncs.author.label"
			description="%Ncs.author.description"
			type="input"
			pattern=".*"
			default=""
			hidden="false"
			persist="true"/>
		<property id="copyright"
			label="%Ncs.copyright.label"
			description="%Ncs.copyright.description"
			type="input"
			pattern=".*"
			default="%Ncs.copyright.default"
			hidden="false"
			persist="true"/>
		<property id="message"
			label="%Ncs.message.label"
			description="%Ncs.message.description"
			type="input"
			pattern=".*"
			default="%Ncs.message.default"
			hidden="false"
			persist="true"/>
		<property id="sourceDir"
			label="%Ncs.sourceDir.label"
			description="%Ncs.sourceDir.description"
			type="input"
			default="%Ncs.sourceDir.default"
			pattern="[a-zA-Z0-9]+"
			mandatory="false"
			persist="true"/>
		<property id="headerDir"
			label="%Ncs.headerDir.label"
			description="%Ncs.headerDir.description"
			type="input"
			default="%Ncs.headerDir.default"
			pattern="[a-zA-Z0-9]+"
			mandatory="false"
			persist="true"
			hidden="true"/>

		<property id="sdkPrefix"
			label="%Ncs.MiniGUISDKPrefix.label"
			description="%Ncs.MiniGUISDKPrefix.description"
			type="browsedir"
			default="%Ncs.MiniGUISDKPrefix.default"
			pattern=".*"
			mandatory="false"
			persist="true"/>

		<property id="runmode"
			label="%Ncs.miniGUIRunmode.label"
			description="%Ncs.miniGUIRunmode.description"
			type="select"
			default="%Ncs.miniGUIRunmode.default"
			pattern=".*"
			mandatory="false"
			persist="true">
               <item label="Threads Mode" value="minigui_ths"/>
               <item label="Processes Mode" value="minigui_procs"/>
               <item label="Standalone Mode" value="minigui_sa"/>
           </property>

		<property id="defaultRenderer"
			label="%Ncs.miniGUIDefaultRenderer.label"
			description="%Ncs.miniGUIDefaultRenderer.description"
			type="select"
			default="classic"
			pattern=".*"
			mandatory="false"
			persist="true">
               <item label="classic renderer" value="classic"/>
               <item label="flat renderer" value="flat"/>
               <item label="skin renderer" value="skin"/>
           </property>
	</property-group>

	<process type="org.eclipse.cdt.managedbuilder.core.NewManagedProject">
		<simple name="name" value="$(projectName)" /> 
		<simple name="artifactExtension" value="exe" /> 
		<simple name="isCProject" value="true" /> 
	</process>

	<process type="org.eclipse.cdt.core.CreateSourceFolder">
		<simple name="projectName" value="$(projectName)"/>
		<simple name="path" value="$(sourceDir)"/>
	</process>
	
	<process type="org.eclipse.cdt.core.CreateSourceFolder">
		<simple name="projectName" value="$(projectName)"/>
		<simple name="path" value="res/" />
	</process>

	<process type="org.eclipse.cdt.managedbuilder.core.CreateIncludeFolder">
		<simple name="projectName" value="$(projectName)"/>
		<simple name="path" value="$(headerDir)"/>
	</process>

	<process type="org.eclipse.cdt.core.AddFiles">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="files">
			<element>
				<simple name="source" value="src/Basename.c"/>
				<simple name="target" value="$(sourceDir)/$(projectName).c"/>
				<simple name="replaceable" value="true"/>
			</element>
		</complex-array>
	</process>

	<process type="org.eclipse.cdt.managedbuilder.core.SetMBSStringListOptionValues">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="resourcePaths">
			<element>
				<simple name="id" value=".*c\.link\.option\.libs"/>
				<simple-array name="values">
                    <element value="$(runmode)" />
                    <element value="pthread" />
                    <element value="png" />
                    <element value="jpeg" />
                    <element value="freetype" />
                    <element value="minictrl"/>
                </simple-array>
				<simple name="path" value=""/>
			</element>
		</complex-array>
	</process>
	
	<process type="org.eclipse.cdt.managedbuilder.core.SetMBSStringListOptionValues">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="resourcePaths">
			<element>
				<simple name="id" value=".*c\.link\.option\.paths"/>
				<simple-array name="values">
                    <element value="$(sdkPrefix)/lib" />
                </simple-array>
				<simple name="path" value=""/>
			</element>
		</complex-array>
	</process>
</template>
